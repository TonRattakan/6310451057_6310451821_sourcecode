<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/images/Costume.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/lightdark.css">
    <link rel="stylesheet" href="css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="js/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="js/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous" />
    <title>Costume Shop</title>
</head>

<body>
    <%- include("./partials/top.ejs") %>
        <%- include("./partials/lightdark.ejs") %>
            <div class="container-fluid">
                <div style="margin-top: 3rem;margin-left: 3rem;margin-right: 3rem;" class="row">
                    <div style="margin-right: 2rem;" class="col-3">
                        <img src="<%= products[0].image %>" alt="" width="350px">
                        <div class="mt-5 d-flex">
                            <a href="/" class="btn btn-danger me-5" style="width: 100px;">กลับ</a>
                            <form action="/mix_and_match" method="post">
                                <input type="text" name="product_name" value="<%= products[0].name %>" hidden>
                                <input type="text" name="product_id" value="<%= products[0].id %>" hidden>
                                <input type="text" name="product_price" value="<%= products[0].price %>" hidden>
                                <input type="text" name="product_img" value="<%= products[0].image %>" hidden>
                                <button type="submit" class="btn btn-success me-5" style="width: 100px;">ถูกใจ</button>
                            </form>
                            <% for (var i = 0; i < products.length; i++) { %>
                                <% if(username != '') { %>
                                    <a class="btn btn-warning btn-rounded" href="/insertcart/<%= products[i].id %>">เพิ่มลงตะกร้า</a>
                                <% } %>
                            <% } %>
                            
                            
                        </div>
                    </div>
                    <div class="me-5 col-5">
                        <div>
                            <h4>ชื่อสินค้า:
                                <font class="text-secondary">
                                    <%= products[0].name %>
                                </font>
                            </h4>
                            <h4>ราคาสินค้า:
                                <font class="text-secondary">
                                    <%= products[0].price %>
                                </font>
                            </h4>
                            <div style="display: flex;">
                                <h4 style="margin-right: 2rem;">หมวดหมู่:
                                    <font class="text-secondary">
                                        <%= products[0].category %>
                                    </font>
                                </h4>
                                <h4 style="margin-right: 2rem;">ประเภท:
                                    <font class="text-secondary">
                                        <%= products[0].type %>
                                    </font>
                                </h4>
                                <h4 style="margin-right: 2rem;">โทนสี:
                                    <font class="text-secondary">
                                        <%= products[0].color_scheme %>
                                    </font>
                                </h4>
                                <h4 style="margin-right: 2rem;">สี:
                                    <font class="text-secondary">
                                        <%= products[0].color %>
                                    </font>
                                </h4>
                            </div>
                            <h4 style="margin-right: 2rem;">รายละเอียด:
                            </h4>
                            <h4>
                                <font class="text-secondary">
                                    <%= products[0].description %>
                                </font>
                            </h4>
                        </div>

                    </div>
                    <div class="col-3">
                        <% if(mix_and_match != '') { %>
                            <h3>
                                ผลลัพธ์การจับคู่
                            </h3>
                            <div class="row">
                                <% for(let i=0; i < mix_and_match.length; i++) { %>
                                    <div class="col-sm-6" id="product" style="height: 100%;">
                                        <a href="/product/<%= mix_and_match[i].id %>">
                                    <img src="<%= mix_and_match[i].image %>" width="150px" alt="">
                                </a>
                                        <p class="mt-2">
                                            <%= mix_and_match[i].name %>
                                        </p>
                                        <form action="/mix_and_match" method="post">
                                            <input type="text" name="product_name" value="<%= mix_and_match[i].name %>" hidden>
                                            <input type="text" name="product_id" value="<%= mix_and_match[i].id %>" hidden>
                                            <input type="text" name="product_price" value="<%= mix_and_match[i].price %>" hidden>
                                            <input type="text" name="product_img" value="<%= mix_and_match[i].image %>" hidden>
                                            <button type="submit" class="btn btn-success btn-sm" style="width: 100px;">ถูกใจ</button>
                                        </form>
                                    </div>
                                    <% }; %>

                            </div>
                            <div>

                            </div>
                            <% } %>
                    </div>
                </div>
            </div>



            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>