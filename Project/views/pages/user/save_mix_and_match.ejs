<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/images/Costume.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/lightdark.css">
    <link rel="stylesheet" href="css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="js/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="js/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous" />
    <title>Costume Shop</title>
</head>

<body>
    <%- include("../../partials/top.ejs") %>
        <%- include("../../partials/navbar.ejs") %>
            <div class="container-fluid">
                <div class="mt-2 text-center">
                    <h1>รายการที่ถูกใจ</h1>
                    <div class="mt-2 shadow p-3">
                        <% if(message != "") { %>
                            <div class="alert alert-success" role="alert">
                                <%= message %>
                            </div>
                            <% } %>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">ลำดับ</th>
                                            <th scope="col">รูป</th>
                                            <th scope="col">ชื่อ</th>
                                            <th scope="col">ราคา</th>
                                            <th scope="col">ลบ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i = 0; i < mix_and_match.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= i+1 %>
                                                </th>
                                                <td>
                                                    <a href="/product/<%= mix_and_match[i].product_id %>">
                                                    <img src="<%= mix_and_match[i].product_img %>" alt="" width="100px">
                                                    </a>
                                                    <td>
                                                        <%= mix_and_match[i].product_name %>
                                                    </td>
                                                    <td>
                                                        <%= mix_and_match[i].product_price %>
                                                    </td>
                                                    <td><button onclick="delete_category('<%= mix_and_match[i].id %>')" class="btn btn-danger">ลบ</button></td>
                                            </tr>
                                            <% } %>

                                    </tbody>
                                </table>
                                <form action="/save_mix_and_match" method="POST">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">บันทึกชื่อรายการ</label>
                                        <input type="text" class="form-control" id="name" name="name" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">บันทึก</button>
                                </form>
                    </div>
                </div>
            </div>

            <script>
                function delete_category(url) {
                    if (confirm("Are you sure you want to delete this product?") == true) {
                        window.location.href = "/delete-product-mix/" + url;
                    }
                };
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>